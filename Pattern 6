import java.util.Scanner;
public class Pattern6
{
    public static void main(String[] args)
    {
        //Write your code
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int i,j;
        for( i=n;i>=1;i--)
        {
            for(j=i;j<n;j++)
            {
                System.out.print(" ");
            }
            for( j=1;j<=i;j++)
            {
            System.out.print("*");
            }
        
        System.out.println("");
        }
    }
}
